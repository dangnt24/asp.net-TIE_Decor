                flex-wrap: wrap;
                justify-content: flex-start;
                gap: 5px;
            }

            .chat-answer-box {
                display: flex;
                flex-direction: row;
                justify-content: flex-start;
                margin-bottom: 10px;
            }

            .answer-message {
                background: #e9ecef;
                color: #333;
                border-radius: 10px;
                padding: 12px 18px;
                max-width: 80%;
                text-align: left;
                box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
                font-size: 14px;
                line-height: 1.5;
            }

            #close-chat {
                margin-left: auto;
                background: none;
                border: none;
                cursor: pointer;
            }

